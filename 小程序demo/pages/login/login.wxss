/* pages/login/login.wxss */
.content{
  margin-top: 40px;
}
.acount{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  width:90%;
  position: relative;
}
.title{
  margin-right: 30px;
  font-weight: bold;
}
.placeholder{
  color: #999;
}
.hr{
  border: 1px solid #ccc;
  opacity: 0.2;
  width: 90%;
  margin: 0 auto;
}
.see{
  position: absolute;
  right: 0;
}
.see image{
  width: 42px;
  height: 30px;
}
.btn{
  width: 90%;
  margin-top: 40px;
  color: #999;
}
.operate{
  display: flex;
  flex-direction: row;
}
.operate view{
  margin: 0 auto;
  margin-top: 40px;
  font-size: 14px;
  color: #333;
}
.login{
  display: flex;
  flex-direction: row;
  margin-top: 150px;
}
.login view{
  margin: 0 auto;
}
.login view image{
  width: 70px;
  height: 98px;
}